    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.itesla_project</groupId>
    <artifactId>histodb-parent</artifactId>
    <version>0.4.0-SNAPSHOT</version>
    <name>HistoDB Parent POM</name>
