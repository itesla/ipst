<config>
	<entsoecaserepo>
		<rootDir>$HOME/caserepo</rootDir>
	</entsoecaserepo>
	<hades2>
		<homeDir>$HOME/hades2LF</homeDir>
	</hades2>
	<computation-local>
		<tmpDir>$HOME/itesla/tmp</tmpDir>
	</computation-local>
	<online>
		<caseRepositoryFactoryClass>eu.itesla_project.cases.EntsoeCaseRepositoryFactory</caseRepositoryFactoryClass>
	        <montecarloSamplerFactoryClass>eu.itesla_project.online.modules.mock.MontecarloSamplerFactoryMock</montecarloSamplerFactoryClass>
		<loadFlowFactoryClass>com.rte_france.itesla.hades2.Hades2Factory</loadFlowFactoryClass>
		<contingencyDbClientFactoryClass>eu.itesla_project.iidm.actions_contingencies.xml.XmlFileContingenciesAndActionsDatabaseClientFactory</contingencyDbClientFactoryClass>
		<onlineDbFactoryClass>eu.itesla_project.online.db.OnlineDbMVStoreFactory</onlineDbFactoryClass>
		<histoDbClientFactoryClass>eu.itesla_project.histodb.client.impl.HistoDbClientFactoryImpl</histoDbClientFactoryClass>
		<rulesDbClientFactoryClass>eu.itesla_project.rulesdb.fs.LocalFileSystemRulesDbClientFactory</rulesDbClientFactoryClass>
		<wcaFactoryClass>eu.itesla_project.online.modules.mock.WCAMockFactoryImpl</wcaFactoryClass>
		<uncertaintiesAnalyserFactoryClass>eu.itesla_project.wca.uncertainties.UncertaintiesAnalyserFactoryTestImpl</uncertaintiesAnalyserFactoryClass>
		<correctiveControlOptimizerFactoryClass>eu.itesla_project.online.modules.mock.CorrectiveControlOptimizerMockFactoryImpl</correctiveControlOptimizerFactoryClass>
		<simulatorFactoryClass>eu.itesla_project.pclfsim.PostContLoadFlowSimFactory</simulatorFactoryClass>
		<mergeOptimizerFactoryClass>eu.itesla_project.merge.MergeOptimizerFactoryMockImpl</mergeOptimizerFactoryClass>
		<rulesFacadeFactoryClass>eu.itesla_project.online.modules.mock.RulesFacadeFactoryMock</rulesFacadeFactoryClass>
	</online>
 	<online-default-parameters>
		<storeStates>true</storeStates>
		<validation>true</validation>
		<timeHorizon>DACF</timeHorizon>
		<analyseBasecase>true</analyseBasecase>
		<states>1</states>
		<baseCaseDate>2013-01-15T18:30:00+01:00</baseCaseDate>
		<histoInterval>2013-01-01T00:00:00+01:00/2013-01-31T23:59:00+01:00</histoInterval>		
		<feAnalysisId>Default_FEA_ID</feAnalysisId>
		<rulesPurityThreshold>0.95</rulesPurityThreshold>
		<offlineWorkflowId>0</offlineWorkflowId>
	</online-default-parameters>
	<online-start-parameters>
		<jmxHost>127.0.0.1</jmxHost>
		<threads>10</threads>
		<jmxPort>6667</jmxPort>
	</online-start-parameters>
	<onlineDbMVStore>
		<onlineDbDir>$HOME/itesla_default_study/onlinewf-db</onlineDbDir>
	</onlineDbMVStore>
	<xmlcontingencydb>
		<xmlFile>$HOME/itesla_default_study/action-contingency.xml</xmlFile>
	</xmlcontingencydb>
	<histodb>
		<debug>true</debug>
		<histoDbCacheUsed>true</histoDbCacheUsed>
		<histoDbSourceName>defaultHistoDBSourceName</histoDbSourceName>
		<histoDbUserName>itesla</histoDbUserName>
		<histoDbPassword>defaultPassword</histoDbPassword>
		<histoDbStoreName>itesladb</histoDbStoreName>
		<histoDbHost>localhost</histoDbHost>
		<histoDbPort>8183</histoDbPort>
	</histodb>
	<local-fs-rules-db>
		<dir>$HOME/itesla_default_study</dir>
	</local-fs-rules-db>
	<postcont-loadflow-sim>
                <loadFlowFactoryClass>com.rte_france.itesla.hades2.Hades2Factory</loadFlowFactoryClass>
                <baseCaseConstraintsFiltered>true</baseCaseConstraintsFiltered>
        </postcont-loadflow-sim>
	<forecastErrorsStorage>
		<forecastErrorsDir>$HOME/itesla_default_study/forecastsdir</forecastErrorsDir>
	</forecastErrorsStorage>
	<simulation-parameters>
 		<postFaultSimulationStopInstant>160</postFaultSimulationStopInstant>
		<faultEventInstant>120</faultEventInstant>
		<branchFaultShortCircuitDuration>0.1</branchFaultShortCircuitDuration>
		<generatorFaultShortCircuitDuration>0.1</generatorFaultShortCircuitDuration>
		<preFaultSimulationStopInstant>100</preFaultSimulationStopInstant>
		<branchFaultResistance>0</branchFaultResistance>
		<branchFaultReactance>0</branchFaultReactance>
		<detailsFileName>simulationDetailledParameters.xml</detailsFileName>
	</simulation-parameters>
</config>
